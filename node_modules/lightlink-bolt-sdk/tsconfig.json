{
  "compilerOptions": {
    "target": "ES5", // Compatibility with older environments
    "module": "commonjs", // CommonJS for Node.js compatibility
    "declaration": true, // Generate type declaration files (.d.ts)
    "outDir": "./dist", // Output folder for compiled JS files
    "strict": true, // Enables strict type-checking options
    "esModuleInterop": true, // Compatibility with CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checks for library files
    "forceConsistentCasingInFileNames": true // Ensure consistent file naming
  },
  "include": ["./**/*.ts"]
}
